{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    <div class="card">
        <div class="card-body">

            <form action="{% if data.permissao.permissao > 1 %} /{{data.modulo.url}} {% else %} javascript:void(0); {% endif %}" method="post" role="form" class="form">

                <input type="hidden" name="voltar" value="{{data.voltar}}">

                {% if data.registro.id is defined %}
                    <input type="hidden" name="id" value="{{data.registro.id}}">
                    <input type="hidden" name="_METHOD" value="PUT"/>
                {% endif %}

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Tarefa *</label>
                            <input type="text" name="job" class="form-control" data-myrules="required" tabindex="1" value="{{data.registro.job}}" />
                        </div>
                        <div class="form-group">
                            <label>Opções comuns</label>
                            <select name="commonOptions" id="commonOptions" class="form-control" tabindex="2">
                                <option value="---" label="--- Configurações Comuns ---">--- Configurações Comuns ---</option>
                                <option value="0 * * * *" label="Uma vez por hora (0 * * * *)‎" {% if data.registro.commonOptions == '0 * * * *' %} selected="selected" {% endif %}>Uma vez por hora (0 * * * *)</option>
                                <option value="0 0,12 * * *" label="Duas vezes por dia (0 0,12 * * *)‎" {% if data.registro.commonOptions == '0 0,12 * * *' %} selected="selected" {% endif %}>Duas vezes por dia (0 0,12 * * *)</option>
                                <option value="0 0 * * *" label="Uma vez por dia (0 0 * * *)‎" {% if data.registro.commonOptions == '0 0 * * *' %} selected="selected" {% endif %}>Uma vez por dia (0 0 * * *)</option>
                                <!--<option value="0 0 * * 0" label="Uma vez por semana (0 0 * * 0)&#x200E;">Uma vez por semana (0 0 * * 0)</option>-->
                                <option value="0 0 1,15 * *" label="1º e 5º (0 0 1,15 * *)‎" {% if data.registro.commonOptions == '0 0 1,15 * *' %} selected="selected" {% endif %}>1º e 5º (0 0 1,15 * *)</option>
                                <option value="0 0 1 * *" label="Uma vez por mês (0 0 1 * *)‎" {% if data.registro.commonOptions == '0 0 1 * *' %} selected="selected" {% endif %}>Uma vez por mês (0 0 1 * *)</option>
                                <option value="0 0 1 1 *" label="Uma vez por ano (0 0 1 1 *)‎" {% if data.registro.commonOptions == '0 0 1 1 *' %} selected="selected" {% endif %}>Uma vez por ano (0 0 1 1 *)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Minuto (s)</label>
                            <select name="minute" id="minute" class="form-control" tabindex="3">
                                <option value="0" label="0" selected="selected" {% if data.registro.minute == 0 %} selected="selected" {% endif %}>0</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Hora (s)</label>
                            <select name="hour" id="hour" class="form-control" tabindex="4">
                                <option value="0" label="0" {% if data.registro.hour == 0 %} selected="selected" {% endif %}>0</option>
                                <option value="1" label="1" {% if data.registro.hour == 1 %} selected="selected" {% endif %}>1</option>
                                <option value="2" label="2" {% if data.registro.hour == 2 %} selected="selected" {% endif %}>2</option>
                                <option value="3" label="3" {% if data.registro.hour == 3 %} selected="selected" {% endif %}>3</option>
                                <option value="4" label="4" {% if data.registro.hour == 4 %} selected="selected" {% endif %}>4</option>
                                <option value="5" label="5" {% if data.registro.hour == 5 %} selected="selected" {% endif %}>5</option>
                                <option value="6" label="6" {% if data.registro.hour == 6 %} selected="selected" {% endif %}>6</option>
                                <option value="7" label="7" {% if data.registro.hour == 7 %} selected="selected" {% endif %}>7</option>
                                <option value="8" label="8" {% if data.registro.hour == 8 %} selected="selected" {% endif %}>8</option>
                                <option value="9" label="9" {% if data.registro.hour == 9 %} selected="selected" {% endif %}>9</option>
                                <option value="10" label="10" {% if data.registro.hour == 10 %} selected="selected" {% endif %}>10</option>
                                <option value="11" label="11" {% if data.registro.hour == 11 %} selected="selected" {% endif %}>11</option>
                                <option value="12" label="12" {% if data.registro.hour == 12 %} selected="selected" {% endif %}>12</option>
                                <option value="13" label="13" {% if data.registro.hour == 13 %} selected="selected" {% endif %}>13</option>
                                <option value="14" label="14" {% if data.registro.hour == 14 %} selected="selected" {% endif %}>14</option>
                                <option value="15" label="15" {% if data.registro.hour == 15 %} selected="selected" {% endif %}>15</option>
                                <option value="16" label="16" {% if data.registro.hour == 16 %} selected="selected" {% endif %}>16</option>
                                <option value="17" label="17" {% if data.registro.hour == 17 %} selected="selected" {% endif %}>17</option>
                                <option value="18" label="18" {% if data.registro.hour == 18 %} selected="selected" {% endif %}>18</option>
                                <option value="19" label="19" {% if data.registro.hour == 19 %} selected="selected" {% endif %}>19</option>
                                <option value="20" label="20" {% if data.registro.hour == 20 %} selected="selected" {% endif %}>20</option>
                                <option value="21" label="21" {% if data.registro.hour == 21 %} selected="selected" {% endif %}>21</option>
                                <option value="22" label="22" {% if data.registro.hour == 22 %} selected="selected" {% endif %}>22</option>
                                <option value="23" label="23" {% if data.registro.hour == 23 %} selected="selected" {% endif %}>23</option>
                                <option value="*" label="A cada Hora (*)‎" {% if data.registro.hour == '*' %} selected="selected" {% endif %}>A cada Hora (*)</option>
                                <option value="0,12" label="Duas vezes por hora (*)‎" {% if data.registro.hour == '0,12' %} selected="selected" {% endif %}>Duas vezes por hora (*)</option>
                                <option value="*/2" label="A cada 2 Horas (*/2)‎" {% if data.registro.hour == '*/2' %} selected="selected" {% endif %}>A cada 2 Horas (*/2)</option>
                                <option value="*/4" label="A cada 4 Horas (*/4)‎" {% if data.registro.hour == '*/4' %} selected="selected" {% endif %}>A cada 4 Horas (*/4)</option>
                                <option value="*/12" label="A cada 12 Horas (*/12)‎" {% if data.registro.hour == '*/12' %} selected="selected" {% endif %}>A cada 12 Horas (*/12)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Dia (s)</label>
                            <select name="day" id="day" class="form-control" tabindex="5">
                                <option value="1" label="1" {% if data.registro.day == 1 %} selected="selected" {% endif %}>1</option>
                                <option value="2" label="2" {% if data.registro.day == 2 %} selected="selected" {% endif %}>2</option>
                                <option value="3" label="3" {% if data.registro.day == 3 %} selected="selected" {% endif %}>3</option>
                                <option value="4" label="4" {% if data.registro.day == 4 %} selected="selected" {% endif %}>4</option>
                                <option value="5" label="5" {% if data.registro.day == 5 %} selected="selected" {% endif %}>5</option>
                                <option value="6" label="6" {% if data.registro.day == 6 %} selected="selected" {% endif %}>6</option>
                                <option value="7" label="7" {% if data.registro.day == 7 %} selected="selected" {% endif %}>7</option>
                                <option value="8" label="8" {% if data.registro.day == 8 %} selected="selected" {% endif %}>8</option>
                                <option value="9" label="9" {% if data.registro.day == 9 %} selected="selected" {% endif %}>9</option>
                                <option value="10" label="10" {% if data.registro.day == 10 %} selected="selected" {% endif %}>10</option>
                                <option value="11" label="11" {% if data.registro.day == 11 %} selected="selected" {% endif %}>11</option>
                                <option value="12" label="12" {% if data.registro.day == 12 %} selected="selected" {% endif %}>12</option>
                                <option value="13" label="13" {% if data.registro.day == 13 %} selected="selected" {% endif %}>13</option>
                                <option value="14" label="14" {% if data.registro.day == 14 %} selected="selected" {% endif %}>14</option>
                                <option value="15" label="15" {% if data.registro.day == 15 %} selected="selected" {% endif %}>15</option>
                                <option value="16" label="16" {% if data.registro.day == 16 %} selected="selected" {% endif %}>16</option>
                                <option value="17" label="17" {% if data.registro.day == 17 %} selected="selected" {% endif %}>17</option>
                                <option value="18" label="18" {% if data.registro.day == 18 %} selected="selected" {% endif %}>18</option>
                                <option value="19" label="19" {% if data.registro.day == 19 %} selected="selected" {% endif %}>19</option>
                                <option value="20" label="20" {% if data.registro.day == 20 %} selected="selected" {% endif %}>20</option>
                                <option value="21" label="21" {% if data.registro.day == 21 %} selected="selected" {% endif %}>21</option>
                                <option value="22" label="22" {% if data.registro.day == 22 %} selected="selected" {% endif %}>22</option>
                                <option value="23" label="23" {% if data.registro.day == 23 %} selected="selected" {% endif %}>23</option>
                                <option value="24" label="24" {% if data.registro.day == 24 %} selected="selected" {% endif %}>24</option>
                                <option value="25" label="25" {% if data.registro.day == 25 %} selected="selected" {% endif %}>25</option>
                                <option value="26" label="26" {% if data.registro.day == 26 %} selected="selected" {% endif %}>26</option>
                                <option value="27" label="27" {% if data.registro.day == 27 %} selected="selected" {% endif %}>27</option>
                                <option value="28" label="28" {% if data.registro.day == 28 %} selected="selected" {% endif %}>28</option>
                                <option value="29" label="29" {% if data.registro.day == 29 %} selected="selected" {% endif %}>29</option>
                                <option value="30" label="30" {% if data.registro.day == 30 %} selected="selected" {% endif %}>30</option>
                                <option value="31" label="31" {% if data.registro.day == 31 %} selected="selected" {% endif %}>31</option>
                                <option value="*" label="A cada Dia (*)‎" selected="selected" {% if data.registro.day == '*' %} selected="selected" {% endif %}>A cada Dia (*)</option>
                                <option value="1,15" label="1º e 5º (1,15)‎" {% if data.registro.day == '1,15' %} selected="selected" {% endif %}>1º e 5º (1,15)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Mês (ses)</label>
                            <select name="month" id="month" class="form-control" tabindex="6">
                                <option value="1" label="Janeiro" {% if data.registro.month == 1 %} selected="selected" {% endif %}>Janeiro</option>
                                <option value="2" label="Fevereiro" {% if data.registro.month == 2 %} selected="selected" {% endif %}>Fevereiro</option>
                                <option value="3" label="Março" {% if data.registro.month == 3 %} selected="selected" {% endif %}>Março</option>
                                <option value="4" label="Abril" {% if data.registro.month == 4 %} selected="selected" {% endif %}>Abril</option>
                                <option value="5" label="Maio" {% if data.registro.month == 5 %} selected="selected" {% endif %}>Maio</option>
                                <option value="6" label="Junho" {% if data.registro.month == 6 %} selected="selected" {% endif %}>Junho</option>
                                <option value="7" label="Julho" {% if data.registro.month == 7 %} selected="selected" {% endif %}>Julho</option>
                                <option value="8" label="Agosto" {% if data.registro.month == 8 %} selected="selected" {% endif %}>Agosto</option>
                                <option value="9" label="Setembro" {% if data.registro.month == 9 %} selected="selected" {% endif %}>Setembro</option>
                                <option value="10" label="Outubro" {% if data.registro.month == 10 %} selected="selected" {% endif %}>Outubro</option>
                                <option value="11" label="Novembro" {% if data.registro.month == 11 %} selected="selected" {% endif %}>Novembro</option>
                                <option value="12" label="Dezembro" {% if data.registro.month == 12 %} selected="selected" {% endif %}>Dezembro</option>
                                <option value="*" label="A cada Mês (*)‎" selected="selected" {% if data.registro.month == '*' %} selected="selected" {% endif %}>A cada Mês (*)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Dia (s) da Semana</label>
                            <select name="weekday" id="weekday" class="form-control" tabindex="7">
                                <option value="1" label="Segunda-Feira" {% if data.registro.weekday == 1 %} selected="selected" {% endif %}>Segunda-Feira</option>
                                <option value="2" label="Terça-feira" {% if data.registro.weekday == 2 %} selected="selected" {% endif %}>Terça-feira</option>
                                <option value="3" label="Quarta-feira" {% if data.registro.weekday == 3 %} selected="selected" {% endif %}>Quarta-feira</option>
                                <option value="4" label="Quinta-feira" {% if data.registro.weekday == 4 %} selected="selected" {% endif %}>Quinta-feira</option>
                                <option value="5" label="Sexta-Feira" {% if data.registro.weekday == 5 %} selected="selected" {% endif %}>Sexta-Feira</option>
                                <option value="6" label="Sábado" {% if data.registro.weekday == 6 %} selected="selected" {% endif %}>Sábado</option>
                                <option value="7" label="Domingo" {% if data.registro.weekday == 7 %} selected="selected" {% endif %}>Domingo</option>
                                <option value="*" label="A cada Dia de semana (*)‎" selected="selected" {% if data.registro.weekday == '*' %} selected="selected" {% endif %}>A cada Dia de semana (*)</option>
                                <!--<option value="0" label="Uma vez por semana (0)&#x200E;">Uma vez por semana 0 </option>-->
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Descrição</label>
                            <textarea name="description" class="form-control" rows="6" style="resize: none">{{ data.registro.description }}</textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {% if data.permissao.permissao > 1 %}
                            <button type="submit" class="btn btn-success btn-submit" data-loading-text="Aguarde...">
                                <i class="fa fa-check"></i>{% if data.registro.id is defined %} Editar {% else %} Adicionar {% endif %}
                            </button>
                        {% endif %}
                        <a href="{{data.voltar}}" class="btn btn-inverse waves-effect waves-light ">
                            <i class="fa fa-times"></i> Cancelar
                        </a>
                    </div>
                </div>

            </form>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
