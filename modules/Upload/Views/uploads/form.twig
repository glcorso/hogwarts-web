{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    <form action="{% if data.permissao.permissao > 1 %} /{{data.modulo.url}} {% else %} javascript:void(0); {% endif %}"
          method="post"
          role="form"
          class="form-upload"
          enctype="multipart/form-data">

        <div class="panel panel-card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Arquivo *</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-card" style="margin-bottom: 40px;">
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-success btn-submit" data-loading-text="Aguarde...">
                        <i class="fa fa-check"></i> Enviar
                    </button>
                </div>
            </div>
        </div>

    </form>

{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
