                {% set data_old = '' %}
                {% set carga_old = '' %}

            <div class="table-responsive">
                <table class="table table-bordered">
                {% for registro in data.resultado %}
                    <thead>
                    {% if registro.data_carga_char != data_old %}
                        <tr><th class="cab init" colspan="3">Data: {{registro.data_carga_char}}</td>
                            <th class="cab init text-right" colspan="2">Total: {{registro.total_dia}}</td>
                        </tr>
                    {% endif %}

                    {% if registro.carga != carga_old %}
                         <tr><th class="cab init" colspan="3">Carga: {{registro.carga}}</td>
                             <th class="cab init text-right" colspan="2">Total: {{registro.total_carga}}</td>
                         </tr>
                        {% if registro.obs != ''%}
                            <tr><th class="cab init" colspan="5">{{registro.obs|nl2br }}</td></tr>
                        {% endif %}
                        <tr>{% if registro.id != null %}
                            <th class="cab" width="10%">ID</th>
                            {% endif %}
                            <th class="cab" width="10%">Código</th>
                            <th class="cab" {% if registro.id != null %}width="70%" {% else %} width="80%"{% endif %} >Descrição</th>
                            <th class="cab" width="5%">Ordem</th>
                            <th class="cab" width="5%">Qtde.</th>
                        </tr>
                    {% endif %}
                    </thead>
                    <tbody>
                        <tr>
                            {% if registro.id != null %}
                            <td><strong> {{registro.id}}</strong></td>
                            {% endif %}
                            <td><strong>{{registro.codigo}}</strong></td>
                            <td><strong>{{registro.descricao}}</strong></td>
                            <td><strong><a href="javascript:void(0);" class="link-abre-demandas" data-ordem-id="{{registro.ordem_id}}" data-num-ordem="{{registro.ordem}}">{{registro.ordem}}</strong></a></td>
                            <td><strong>{{registro.qtde}}</strong></td>
                        </tr>
                    </tbody>
            
                    {% set data_old = registro.data_carga_char %}
                    {% set carga_old = registro.carga %}
                {% else %}
                    <tr><td class="text-center"><strong><h4>Nenhuma Ordem Encontrada.</h4></strong></td></tr>
