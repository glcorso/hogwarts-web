{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
  {{parent()}}
  <style type="text/css">
    .custom-control{
        padding-left: 0rem; 
        margin-right: 0rem;
    }

  </style>
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    {% if flash.error is defined %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.error|raw}}
        </div>
    {% endif %}

    {% if flash.success is defined %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.success|raw}}
        </div>
    {% endif %}


    <div class="btn-table-up ">
        <div class="row">
            <div class="col-lg-8">
                <div class="btn-group dropdown">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Filtros <span class="caret"></span>
                    </button>
                     <button type="button" class="btn btn-info btn-imprimir ml-1" style="display: none;" >
                        <i class="fa fa-print"></i> Imprimir
                    </button>
                    <div class="dropdown-menu animated" style="width: 940px; padding: 15px;">
                        <form action="/{{data.modulo.url}}" method="get" role="form" class="form-filtro">
                            <div style="padding: 15px;">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Item Pai</label>
                                            <select name="pai_id" class="form-control select-item" >
                                                {% if data.filtros is defined and data.filtros.pai_id is not null %}
                                                    <option value="{{data.filtros.pai_id}}" selected="selected">{{data.item_filtrado_pai.codigo}} - {{data.item_filtrado_pai.descricao}}</option>
                                                {% endif %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Item Filho</label>
                                            <select name="filho_id"  class="form-control select-item" >
                                                {% if data.filtros is defined and data.filtros.filho_id is not null %}
                                                    <option value="{{data.filtros.filho_id}}" selected="selected">{{data.item_filtrado_filho.codigo}} - {{data.item_filtrado_filho.descricao}}</option>
                                                {% endif %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Ação</label>
                                            <select name="acao"  class="form-control" >
                                                <option></option>
                                                <option value="I" {% if data.filtros.acao is defined and data.filtros.acao == 'I' %} selected="selected" {% endif %}>Inclusão</option>
                                                <option value="A" {% if data.filtros.acao is defined and data.filtros.acao == 'A' %} selected="selected" {% endif %}>Alteração</option>
                                                <option value="E" {% if data.filtros.acao is defined and data.filtros.acao == 'E' %} selected="selected" {% endif %}>Exclusão</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">E-mail Enviado</label>
                                            <select name="enviar"  class="form-control" >
                                                <option></option>
                                                <option value="0" {% if data.filtros.enviar is defined and data.filtros.enviar == '0' %} selected="selected" {% endif %}>Não</option>
                                                <option value="1" {% if data.filtros.enviar is defined and data.filtros.enviar == '1' %} selected="selected" {% endif %}>Sim</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Data</label>
                                            <input type="text" name="data" class="form-control" value="{% if data.filtros.data is defined %}{{data.filtros.data}}{% endif %}">
                                            <small>Para utilizar intervalos, utilize o formato dd/mm/yyyy|dd/mm/yyyy</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Mensagem</label>
                                            <input type="text" name="mensagem" class="form-control" value="{% if data.filtros.mensagem is defined %}{{data.filtros.mensagem}}{% endif %}">
                                            <small>Você pode digitar apenas uma parte da mensagem</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Usuário</label>
                                            <input type="text" name="usuario" class="form-control" value="{% if data.filtros.usuario is defined %}{{data.filtros.usuario}}{% endif %}">
                                            <small>Você pode digitar apenas uma parte do nome do usuário</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-success btn-filtrar" value="Filtrar">
                                            <a href="javascript:void(0);" class="btn btn-inverse waves-effect waves-light btn-limpar-filtro">Limpar Filtros</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 ">
                <input type="hidden" name="registros_ids" id="registros_ids" value="">
                {% if data.permissao.permissao > 1  %}
                    <div class="text-right btn-table-up">
                        <a href="javascript:void(0);" class="btn btn-success btn-enviar-email" style="display: none;"><i class="fa fa-envelope"></i>  Enviar E-mails Selecionados</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


    <div class="card mt-2">
        <div class="card-body">
            <div class="table-responsive" style="font-size: 14px;">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="1%">
                            <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input"  name="check_sel_all_print" value="" id="check-sel-all-print">
                                    <label class="custom-control-label" for="check-sel-all-print">
                                    </label>
                                </div></th>
                            <th width="5%">Item Pai</th>
                            <th width="15%">Descrição Pai</th>
                            <th width="5%">Item Filho</th>
                            <th width="15%">Descrição Filho</th>
                            <th width="10%">Data</th>
                            <th width="10%">Usuário</th>
                            <th width="10%">Ação</th>
                            <th width="20%">Mensagem</th>
                            <th width="10%">E-mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for registro in data.resultado %}
                            <tr>
                                <td>{% if registro.enviar == 0 %}<div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input check checked-linhas"  name="check_sel_print" value="{{registro.id}}" id="check-sel-all-print-{{registro.id}}">
                                    <label class="custom-control-label" for="check-sel-all-print-{{registro.id}}">
                                    </label>
                                </div> {% endif %}</td>
                                <td>{{registro.cod_item_pai}}</td>
                                <td>{{registro.desc_item_pai}}</td>
                                <td>{{registro.cod_item_filho}}</td>
                                <td>{{registro.desc_item_filho}}</td>
                                <td>{{registro.data|date('d/m/Y H:i:s')}}</td>
                                <td>{{registro.usuario}}</td>
                                <td>{% if registro.acao == 'I' %} 
                                        <span class="label label-success" title="{{registro.acao_descritiva}}">{{registro.acao_descritiva}}</span> 
                                    {% elseif registro.acao == 'A' %}
                                        <span class="label label-warning" title="{{registro.acao_descritiva}}">{{registro.acao_descritiva}}</span> 
                                    {% elseif registro.acao == 'E' %}
                                        <span class="label label-danger" title="{{registro.acao_descritiva}}">{{registro.acao_descritiva}}</span> 
                                    {% endif %}
                                </td>
                                <td>{{registro.mensagem}}</td>
                                <td>{% if registro.enviar == 0 %} 
                                        <span class="label label-danger" title="{{registro.enviar_descritivo}}">{{registro.enviar_descritivo}}</span> 
                                    {% else %}
                                        <span class="label label-success" title="{{registro.enviar_descritivo}}">{{registro.enviar_descritivo}}</span> 
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    {% if data.paginacao is defined and data.paginacao != null %}
        <div class="row">
            {% if data.paginacao.qtde != null %}
                <div class="col-lg-4"><small>{{data.paginacao.qtde|raw}}</small></div>
            {% endif %}
            <div class="col-lg-8 text-align-right">{{data.paginacao.paginacao|raw}}</div>
        </div>
    {% endif %}


{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
