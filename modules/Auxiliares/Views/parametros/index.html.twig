{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
  {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    {% if flash.error is defined %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.error|raw}}
        </div>
    {% endif %}

    {% if flash.success is defined %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.success|raw}}
        </div>
    {% endif %}

    <div class="btn-table-up">
        <div class="row">
            <div class="col-lg-8 mb-1">
                <div class="btn-group dropdown">
                    <button type="button" class="btn btn-info waves-effect waves-light dropdown-toggle" data-toggle="dropdown" >
                        Filtros <span class="caret"></span>
                    </button>
                    <div class="dropdown-menu animated" style="width: 340px; padding: 15px;">
                        <form action="/{{data.modulo.url}}" method="get" role="form" class="form-filtro">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="filter-col" for="pref-search">Grupo</label>
                                    <select name="grupo" class="form-control">
                                        <option></option>
                                        {% if data.campos_filtro.grupos is defined %}
                                            {% for grupo in data.campos_filtro.grupos %}
                                                <option value="{{grupo.grupo}}" {% if data.filtros is defined and data.filtros.grupo == grupo.grupo %} selected="selected" {% endif %}>{{grupo.grupo}}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Filtrar">
                                    <a href="javascript:void(0);" class="btn btn-inverse waves-effect waves-light btn-limpar-filtro">Limpar Filtros</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         <div class="col-lg-4 mb-1">
            {{data.campos_filtro.empresas|raw}}
        </div>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                <thead>
                    <tr>
                        <!-- para alterações verificar app.css -->
                        <th width="40%" >Descrição</th>
                        <th width="20%">Grupo</th>
                        <th width="20%">Valor</th>
                        <th width="20%"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in data.resultado %}
                        <tr>
                            <td><a href="/{{data.modulo.url}}/editar/{{row.id}}" class="atalho">{{row.descricao}}</a></td>
                            <td>{{row.grupo}}</td>
                            <td>
                                {% if row.valor|length > 40 %}
                                    {{row.valor|slice(0,40)|raw}}...
                                {% else %}
                                    {{row.valor|raw}}
                                {% endif %}
                            </td>
                            <td align="right">
                                {% if data.permissao.permissao >= 2 %}
                                <a href="/{{data.modulo.url}}/editar/{{row.id}}" data-toggle="tooltip" data-original-title="Editar"><i class="fa fa-pencil text-inverse m-r-10"></i></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5" align="center">Nenhum registro encontrado.</td></tr>
                    {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
