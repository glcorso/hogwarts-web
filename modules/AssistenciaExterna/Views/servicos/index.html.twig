{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
  {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    {% if flash.error is defined %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.error|raw}}
        </div>
    {% endif %}

    {% if flash.success is defined %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.success|raw}}
        </div>
    {% endif %}

    <div class="btn-table-up ">
        <div class="row">
            <div class="col-lg-10 mb-1">
                <div class="btn-group dropdown">
                    <button type="button" class="btn btn-info dropdown-toggle" style="display:none;" data-toggle="dropdown" aria-expanded="false">
                        Filtros <span class="caret"></span>
                    </button>
                    <div class="dropdown-menu animated" style="width: 340px; padding: 15px;">
                        <form action="/{{data.modulo.url}}" method="get" role="form" class="form-filtro">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="filter-col" for="pref-search">Nome ou usuário</label>
                                    <input type="text" name="string" class="form-control" value="{% if data.filtros is defined %}{{data.filtros.string}}{% endif %}">
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Filtrar">
                                    <a href="javascript:void(0);" class="btn btn-inverse waves-effect waves-light btn-limpar-filtro">Limpar Filtros</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         <div class="col-lg-2 mb-1">
            {% if data.permissao.permissao > 1 %}
                <div class="text-right btn-table-up">
                    <a class="btn btn-block btn-success waves-effect waves-light" href="/{{data.modulo.url}}/adicionar"><i class="fa fa-plus"></i> Adicionar</a>
                </div>
            {% endif %}
        </div>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-body">
            <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <!-- para alterações verificar app.css -->
                    <th>Serviço</th>
                    <th>Status</th>
                    <th width="90"></th>
                </tr>
            </thead>
            <tbody>
                {% for row in data.resultado %}
                    <tr>

                        <td><a href="/{{data.modulo.url}}/editar/{{row.id}}" class="atalho">{{row.cod_serv}} - {{row.descricao}}</a></td>
                        <td>
                            {% if row.sit == '1' %}
                                <span class="label label-success" title="Ativo">Ativo</span>
                            {% else %}
                                <span class="label label-danger" title="Inativo">Inativo</span>
                            {% endif %}
                        </td>
                        <td class="text-nowrap">
                            <a href="/{{data.modulo.url}}/editar/{{row.id}}" data-toggle="tooltip" data-original-title="Editar"><i class="fa fa-pencil text-inverse m-r-10"></i></a>
                            {% if data.permissao.permissao > 2  %}
                                <a href="javascript:void(0);" class="btn-delete-modal {% if row.permite_excluir == false %} disabled {% endif %}" data-id="{{row.id}}" data-name="{{row.usuario}}" data-toggle="tooltip" data-original-title="Excluir"><i class="fa fa-close text-danger m-r-10"></i></a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="3" align="center">Nenhum registro encontrado.</td></tr>
                {% endfor %}
            </tbody>
            </table>
            </div>
        </div>
    </div>

    {% if data.paginacao is defined and data.paginacao != null %}
        <div class="row">
            {% if data.paginacao.qtde != null %}
                <div class="col-lg-4"><small>{{data.paginacao.qtde|raw}}</small></div>
            {% endif %}
            <div class="col-lg-8 text-align-right">{{data.paginacao.paginacao|raw}}</div>
        </div>
    {% endif %}

    <div class="modal fade modal-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    Confirma a exclusão do serviço <strong></strong>?
                </div>
                <div class="modal-footer">
                    <form action="/{{data.modulo.url}}" method="post">
                        <input type="hidden" name="_METHOD" value="DELETE"/>
                        <input type="hidden" name="id" value="">
                        <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary btn-submit-modal btn-success" data-loading-text="Excluindo...">Confirmar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
