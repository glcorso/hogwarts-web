                                        {{conc.Concorrente.descricao}}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>

                <h5 class="mb-1"><strong>Material Publicitário</strong></h5>
                <hr class="mb-4">
                <div class="row mt-4">
                    <div class="col-md-4 mb-3">
                        <label>Folder Quantidade</label>
                        <input type="number" class="form-control" name="folder_qtde" {% if data.setor == 'pos_vendas' %} disabled="disabled" {% endif %} {% if data.registro.folder_qtde is defined and data.registro.folder_qtde != null %} value="{{data.registro.folder_qtde}}"{% endif %}>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Catálogo Quantidade</label>
                        <input type="number" class="form-control" name="catalogo_qtde" {% if data.setor == 'pos_vendas' %} disabled="disabled" {% endif %} {% if data.registro.catalogo_qtde is defined and data.registro.catalogo_qtde != null %} value="{{data.registro.catalogo_qtde}}"{% endif %}>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Banner Quantidade</label>
                        <input type="number" class="form-control" name="banner_qtde" {% if data.setor == 'pos_vendas' %} disabled="disabled" {% endif %} {% if data.registro.banner_qtde is defined and data.registro.banner_qtde != null %} value="{{data.registro.banner_qtde}}"{% endif %} >
                    </div>
                </div>

