                            <div class="form-group">
                                <input id="upload" {% if data.setor == 'pos_vendas' %} disabled="disabled" {% endif %} type="file" accept="image/gif, image/jpeg, image/png, , image/jpg" {% if data.registro.bloqueia_campos == '1' %} disabled="disabled" {% endif %} name="files[]" multiple>
                            </div>

                            {% if data.arquivos is defined and data.arquivos != null %}   
                            
