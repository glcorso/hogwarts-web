{% extends 'baseLogged.html.twig' %}

{% block stylesheets %}
  {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {% include 'breadcrumb.html.twig' with {'modulos': data.modulo} %}
{% endblock %}

{% block principal %}

    {% if flash.error is defined %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.error|raw}}
        </div>
    {% endif %}

    {% if flash.success is defined %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{flash.success|raw}}
        </div>
    {% endif %}

    <div class="btn-table-up ">
        <div class="row">
            <div class="col-lg-10 mb-1">
                <div class="btn-group dropdown">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Filtros <span class="caret"></span>
                    </button>
                    <div class="dropdown-menu animated" style="width: 740px; padding: 15px;font-size: 15px;">
                        <form action="/{{data.modulo.url}}" method="get" role="form" class="form-filtro">
                            <div class="row">
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Cliente</label>
                                            <input type="text" name="razao_social" class="form-control" value="{% if data.filtros is defined %}{{data.filtros.razao_social}}{% endif %}">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Nota</label>
                                            <input type="text" name="num_nf" class="form-control" value="{% if data.filtros.num_nf is defined %}{{data.filtros.num_nf}}{% endif %}">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Transportadora</label>
                                            <input type="text" name="transportadora" class="form-control" value="{% if data.filtros.transportadora is defined %}{{data.filtros.transportadora}}{% endif %}">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Status</label>
                                            <select name="status" class="form-control">
                                                <option></option>
                                                <option value="A" {% if data.filtros.status == 'A'%} selected="selected" {% endif %} >Aguardando Solicitação</option>
                                                <option value="AC" {% if data.filtros.status == 'AC'%} selected="selected"{% endif %}>Aguardando Coleta</option>
                                                <option value="T" {% if data.filtros.status == 'T'%} selected="selected" {% endif %}>Em Trânsito</option>
                                                <option value="R" {% if data.filtros.status == 'R'%} selected="selected" {% endif %}>Recebido</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Atrasados</label>
                                            <select name="atrasado" class="form-control">
                                                <option></option>
                                                <option value="S" {% if data.filtros.atrasado == 'S'%} selected="selected" {% endif %} >Sim</option>
                                                <option value="N" {% if data.filtros.atrasado == 'N'%} selected="selected"{% endif %}>Não</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Data Emissão</label>
                                            <input type="text" name="dt_emissao" class="form-control" value="{% if data.filtros.dt_emissao is defined %}{{data.filtros.dt_emissao}}{% endif %}">
                                            <small>Para utilizar intervalos, utilize o formato dd/mm/yyyy|dd/mm/yyyy</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Data Solicitado</label>
                                            <input type="text" name="dt_solicitado" class="form-control" value="{% if data.filtros.dt_solicitado is defined %}{{data.filtros.dt_solicitado}}{% endif %}">
                                            <small>Para utilizar intervalos, utilize o formato dd/mm/yyyy|dd/mm/yyyy</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Data Coletado</label>
                                            <input type="text" name="coletado_em" class="form-control" value="{% if data.filtros.coletado_em is defined %}{{data.filtros.coletado_em}}{% endif %}">
                                            <small>Para utilizar intervalos, utilize o formato dd/mm/yyyy|dd/mm/yyyy</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="filter-col" for="pref-search">Data Recebido</label>
                                            <input type="text" name="recebido_em" class="form-control" value="{% if data.filtros.recebido_em is defined %}{{data.filtros.recebido_em}}{% endif %}">
                                            <small>Para utilizar intervalos, utilize o formato dd/mm/yyyy|dd/mm/yyyy</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Filtrar">
                                    <a href="javascript:void(0);" class="btn btn-inverse waves-effect waves-light btn-limpar-filtro">Limpar Filtros</a>
                                </div>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         <div class="col-lg-2 mb-1">
            {% if data.permissao.permissao > 1 %}
                <div class="text-right btn-table-up">
                     <a href="javascript:void(0);" class="btn btn-success open-modal" style="margin-left:4px;" data-toggle="modal" data-target="#uploadModal"><i class="fa fa-upload"></i> Anexar NF-e</a>
                </div>
            {% endif %}
        </div>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-body">
            <div class="table-responsive" style="font-size: 14px;">
            <table class="table ">
            <thead>
                <tr>
                    <th width="30%">Cliente</th>
                    <th width="15%">Cidade</th>
                    <th width="5%">UF</th>
                    <th width="10%">Nota Fiscal</th>
                    <th width="8%">Dt. Emissão</th>
                    <th width="15%">Transportadora</th>
                    <th width="10%">Dt. Solicitação</th>
                    <th width="10%">Dt. Coletado </th>
                    <th width="5%">Status </th>
                    <th width="10%">Dt. Recebido </th>
                    <th width="5%">Tot. Dias </th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for row in data.resultado %}
                    <tr {% if row.cor == 'V' %} bgcolor="#ff9980" {% elseif  row.cor == 'A' %} bgcolor="#ffff80" {% endif %}>
                        <td>{{row.razao_social}}</td>
                        <td>{{row.cidade}}</td>
                        <td>{{row.uf}}</td>
                        <td>{{row.num_nf}}</td>
                        <td>{{row.dt_emissao|date('d/m/Y')}}</td>
                        <td>{{row.transportadora}}</td>
                        <td>{% if row.dt_solicitado != null %}
                                {{row.dt_solicitado|date('d/m/Y')}}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{% if row.coletado_em != null %}
                                {{row.coletado_em|date('d/m/Y')}}
                            {% else %}
                                -
                            {% endif %}</td>
                        <td>
                            {% if row.status == 'A' %}
                                <span class="label label-primary" title="Aguardando Solicitação">Aguardando Solicitação</span>
                            {% elseif row.status == 'AC' %}
                                <span class="label label-warning" title="Aguardando Coleta">Aguardando Coleta</span>
                            {% elseif row.status == 'T' %}
                                <span class="label label-info" title="Em trânsito">Em Trânsito</span>
                            {% elseif row.status == 'R' %}
                                <span class="label label-success" title="Recebido">Recebido</span>
                            {% endif %}
                        </td>
                        <td>{% if row.recebido_em != null %}
                                {{row.recebido_em|date('d/m/Y')}}
                            {% else %}
                                -
                            {% endif %}</td>
                        <td>{{row.total_dias}}</td>
                        <td>
                            {% if row.status == 'A' %}
                                <a href="javascript:void(0);" class="btn btn-primary btn-xs btn-acoes" data-acao="S" data-id="{{row.id}}" data-dia="{{d|date('d/m/Y')}}">Solicitar Coleta</a>
                            {% elseif row.status == 'AC' %}
                               <a href="javascript:void(0);" data-dia="{{d|date('d/m/Y')}}" class="btn btn-warning btn-xs btn-acoes" data-acao="C" data-id="{{row.id}}">Coleta Realizada</a>
                            {% elseif row.status == 'T' %}
                                <a href="javascript:void(0);" data-dia="{{d|date('d/m/Y')}}" class="btn btn-success btn-xs btn-acoes" data-chave="{{row.chave_acesso}}" data-acao="R"  data-id="{{row.id}}">Receber</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="11" align="center">Nenhum registro encontrado.</td></tr>
                {% endfor %}
            </tbody>
            </table>
            </div>
        </div>
    </div>

    {% if data.paginacao is defined and data.paginacao != null %}
        <div class="row">
            {% if data.paginacao.qtde != null %}
                <div class="col-lg-4"><small>{{data.paginacao.qtde|raw}}</small></div>
            {% endif %}
            <div class="col-lg-8 text-align-right">{{data.paginacao.paginacao|raw}}</div>
        </div>
    {% endif %}

        <!-- Modal -->
    <div id="uploadModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

        <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Anexar NF-e</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <!-- Form -->
                    <form method="post" action="/assistencia/rastreamento-garantias/anexar-nfe" enctype="multipart/form-data">
                        <input type="file" class="uploadArquivos" required="required" name="files[]" multiple>

                        <hr>

                        <button type="button" class="btn btn-success btn-submit-modal btn-success" data-loading-text="Confirmar...">Confirmar</button>
                        <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Cancelar</button>

                    </form>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}
